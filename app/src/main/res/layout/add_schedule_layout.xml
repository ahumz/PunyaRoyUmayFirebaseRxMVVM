<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@drawable/bgj"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="15dp"
>

    <ImageView android:layout_width="200dp"
               android:layout_height="150dp"
               android:src="@drawable/logo"
               android:layout_gravity="center_horizontal"    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Data Schedule"
            android:textColor="@color/putih"
            android:textSize="30dp"
            android:textStyle="bold" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Materi Training"
            android:textColor="@color/putih"
            android:textSize="18dp" />
    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/edt_materi"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Nama Trainer"
            android:textColor="@color/putih"
            android:textSize="18dp" />
    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/edt_nama_trainer"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Ruang Training"
            android:textColor="@color/putih"
            android:textSize="18dp" />
    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/edt_ruang"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Durasi Pengajaran"
            android:textColor="@color/putih"
            android:textSize="18dp" />
    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/edt_durasi"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Foto Trainer"
            android:textColor="@color/putih"
            android:textSize="18dp" />

    <Button
            android:id="@+id/btn_image"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:background="#79EEDD"
            android:text="Browse" />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="2"
                  android:layout_marginTop="15dp"
    >
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_menu"
                android:layout_weight="1"
                android:text="back"
                android:background="#2A38A7"
                android:textColor="@color/putih"
                android:layout_marginRight="5dp"
        />
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_submit"
                android:layout_weight="1"
                android:text="submit"
                android:background="#2F972B"
                android:textColor="@color/putih"
                android:layout_marginLeft="5dp"
        />
    </LinearLayout>
</LinearLayout>