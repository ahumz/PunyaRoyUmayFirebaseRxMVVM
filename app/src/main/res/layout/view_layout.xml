<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/view_trans"
        android:background="@drawable/bgi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Admin.MenuSchedule">
    <ImageView android:layout_width="200dp"
               android:layout_height="150dp"
               android:src="@drawable/logo"
               android:layout_centerHorizontal="true"
               android:id="@+id/img_view"
    />

    <TextView android:layout_width="match_parent"
              android:layout_height="60dp"
              android:layout_below="@+id/img_view"
              android:id="@+id/txt_isi_schedule"
              android:text="Add Schedule"
              android:paddingStart="15dp"
              android:layout_marginTop="20dp"
              android:textSize="32dp"
              android:textColor="@color/hitam"
              android:background="@drawable/bg_menu"
    />

    <ListView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="70dp"
              android:id="@+id/lv_trans"
              android:layout_below="@+id/txt_isi_schedule"
              android:layout_marginTop="20dp"
              android:padding="15dp"
    />

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_menu_view"
            android:text="schedule list"
            android:background="#2A38A7"
            android:textColor="@color/putih"
            android:layout_alignParentBottom="true"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/txt_null"
              android:text="Data Tidak Tersedia"
              android:layout_centerInParent="true"
    />
</RelativeLayout>